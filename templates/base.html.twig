						<li>
							<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
						</li>
					</ul>
				</div>

			</div>
		</nav>
	</body>
	{% block body %}{% endblock %}
	{% block javascripts %}
		{# Boostrap JS #}
		<script type="text/javascript" src="{{asset('assets/jquery/jquery-3.6.0.slim.min.js')}}"></script>
